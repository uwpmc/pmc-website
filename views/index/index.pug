-
  function readableDate(date) {
    // date given as yyyy-mm-dd
    let day = (date.charAt(6) == '0') ? date.charAt(7) : date.slice(6,8);
    let month = '';
    switch ('' + date.slice(4,6)) {
      case '01':
        month = 'January';
        break;
      case '02':
        month = 'February';
        break;
      case '03':
        month = 'March';
        break;
      case '04':
        month = 'April';
        break;
      case '05':
        month = 'May';
        break;
      case '06':
        month = 'June';
        break;
      case '07':
        month = 'July';
        break;
      case '08':
        month = 'August';
        break;
      case '09':
        month = 'September';
        break;
      case '10':
        month = 'October';
        break;
      case '11':
        month = 'November';
        break;
      case '12':
        month = 'December';
        break;
    }
    return month + ' ' + day + ', ' + date.slice(0,4);
  }
  function readableTime(time) {
    // time given as hh:mm:ss
    const parts = time.split(':');
    time = parts[0] + parts[1];
    let intTime = parseInt(time);
    let hr = Math.floor(time/100);
    let ampm = (hr >= 12 ? 'PM' : 'AM');
    if (hr == 0) hr = 12;
    else if (hr > 12) hr -= 12;
    
    return hr + ':' + time.slice(2,4) + ' ' + ampm;
  }
  function getTerm(date) {
    // date given as yyyymmdd
    let month = parseInt(date.slice(4,6));
    return (month < 5 ? 'w' : (month < 9 ? 's' : 'f')) + date.slice(2,4);
  }
  Date.prototype.yyyymmdd = function() {
    var mm = this.getMonth() + 1; // getMonth() is zero-based
    var dd = this.getDate();
    
    return [this.getFullYear(),
            (mm>9 ? '' : '0') + mm,
            (dd>9 ? '' : '0') + dd
            ].join('');
          };
  function eventBGColor(type) {
    for (let i = 0; i < types.length; ++i) {
      //console.log(types[i].id + ' ' + type)
      if (types[i].id === type) {
        //return 'linear-gradient(' + types[i].fstcol + 'ff, ' + types[i].sndcol + 'ce)';
        return [types[i].fstcol, types[i].sndcol];
      }
    }
    //return 'linear-gradient(#000000, #000000)';
    return ['#000000', '#000000'];
  }

mixin event(id, type, title, desc, date, begintime, endtime, loc, imgpath)
  a.eventItemHoverBuffer(href='events/' + getTerm(date) + '#' + id)
    .eventItem(id=type, style='background-image: linear-gradient(' + eventBGColor(type)[0] + 'ff,' + eventBGColor(type)[1] + 'ce)' + (imgpath === null ? '' : ", url('img/events/"+imgpath+"')"))
      .info
        h2 #{title}
        p(style='font-size: 14pt;') #{desc}
      .dateBox
        p(style='color: ' + eventBGColor(type)[1] + '; filter: saturate(50%) brightness(130%);') #{readableDate(date)}
          br
          | #{readableTime(begintime)}&ndash;#{readableTime(endtime)}
          br
          span(style='color: #ffffff; font-family: inherit;') #{loc}
mixin potw(id, title, date, imgpath)
  a.potwItem(href='/potw#'+id)
    h1.number ##{id}
    h3.date #{readableDate(date)}
    h3.title #{title}
    h3.arrow >
    .potwImg(style=(imgpath === null ? '' : 'background-image: url("img/potw/'+imgpath+'")'))
